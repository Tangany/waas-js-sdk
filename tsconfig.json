{
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "typeforce": [
        "src/types/typeforce.d.ts"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "downlevelIteration": true
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}
